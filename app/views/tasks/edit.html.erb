
<h1>Edit a task:</h1>

<p>
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.text_field :completed %>
    <%= f.submit %>
  <% end %>
</p>

<p><%= link_to 'back', task_path %></p>
<%= link_to 'See all tasks', tasks_path %>
